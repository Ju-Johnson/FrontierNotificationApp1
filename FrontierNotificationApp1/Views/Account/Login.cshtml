@model FrontierNotificationApp1.Models.Account.Login

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4></h4>

<p>
    <b>Email =</b> Frontier email address <br />
    <b>Password =</b> Frontier email password <br />
</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email Address</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" class="control-label">Remember Me</label>
                <input asp-for="RememberMe" class="form-control" />
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p><input type="submit" value="Log In" class="btn btn-default" /></p>
                <p><a asp-controller="Account" asp-action="Register">Register</a></p>
            </div>
        </form>
    </div>
</div>
